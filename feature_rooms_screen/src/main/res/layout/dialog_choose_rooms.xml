<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dropdown"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:background="@drawable/background_dialog_with_rooms"
    android:elevation="4dp">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_button_all_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/all_rooms_in_office"
            android:textAppearance="@style/subtitle_1" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <RadioButton
            android:id="@+id/radio_button_all_rooms_first_floor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/all_rooms_on_1st_floor" />

        <RadioButton
            android:id="@+id/radio_button_amsterdam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/amsterdam" />

        <RadioButton
            android:id="@+id/radio_button_valencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/valencia" />

        <RadioButton
            android:id="@+id/radio_button_berlin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/berlin" />

        <RadioButton
            android:id="@+id/radio_button_london"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/london" />

        <RadioButton
            android:id="@+id/radio_button_paris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/paris" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_020303" />

        <RadioButton
            android:id="@+id/radio_button_all_rooms_second_floor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/all_rooms_on_2nd_floor" />

        <RadioButton
            android:id="@+id/radio_button_rome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rome" />
    </RadioGroup>


</RelativeLayout>

