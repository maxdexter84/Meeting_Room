<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimens_66_dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/roomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimens_12_sp"
            app:layout_constraintStart_toStartOf="@+id/lineUnderRoomView"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Paris" />

        <View
            android:id="@+id/lineUnderRoomView"
            android:layout_width="@dimen/dimens_60_dp"
            android:layout_height="@dimen/dimens_4_dp"
            android:background="@color/black"
            android:layout_marginTop="@dimen/dimens_4_dp"
            app:layout_constraintTop_toBottomOf="@id/roomTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_0_dp"
            android:layout_marginTop="@dimen/dimens_15_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineUnderRoomView"
            app:layout_constraintVertical_bias="1.0"
            tools:listitem="@layout/item_event" />

</androidx.constraintlayout.widget.ConstraintLayout>