<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeetingRoom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_text</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_color</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/window_backgraund</item>
        <item name="materialTimePickerTheme">@style/TimePickerMaterial.Dark</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerDialog.Dark</item>
        <item name="materialAlertDialogTheme">@style/AlertDialog.Dark</item>
    </style>
</resources>