<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeetingRoom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_text</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_color</item>
        <!-- Customize your theme here. -->
        <item name="popupMenuStyle">@style/PopupMenuToolbar</item>
        <item name="android:windowBackground">@color/window_backgraund</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerDialog.Light</item>
        <item name="materialAlertDialogTheme">@style/AlertDialog.Light</item>
        <item name="materialTimePickerTheme">@style/TimePickerMaterial.Light</item>
    </style>

    <style name="PopupMenuToolbar" parent="@style/Widget.AppCompat.PopupWindow">
        <item name="android:dropDownHorizontalOffset">-60dp</item>
        <item name="android:dropDownVerticalOffset">30dp</item>
    </style>
</resources>