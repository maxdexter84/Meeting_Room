<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.Widget.ProgressButton.Yellow" parent="">
        <item name="android:textAppearanceButton">@style/TextAppearance.ProgressButton.Yellow</item>
    </style>

    <style name="TextAppearance.Body.White" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.ProgressButton.Yellow" parent="@style/TextAppearance.Body.White">
        <item name="android:textColor">@color/button_text_color_selector</item>
    </style>

    <style name="Widget.ProgressButton.Yellow" parent="">
        <item name="android:theme">@style/ThemeOverlay.Widget.ProgressButton.Yellow</item>
        <item name="android:background">@drawable/progress_button</item>
    </style>

    <style name="TextAppearanceLargeTitle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/dimens_34_sp</item>
        <item name="android:textColor">@color/event_title_text_colour</item>
    </style>

    <style name="TextAppearanceTitle" >
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/dimens_20_sp</item>
        <item name="android:textColor">@color/event_title_text_colour</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>

    <style name="TextAppearanceSmallTitle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/event_title_text_colour</item>
        <item name="android:textSize">@dimen/dimens_12_sp</item>
    </style>

    <style name="EventCardTitleTextAppearance">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/dimens_18_sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/event_title_text_colour</item>
        <item name="android:lineSpacingExtra">@dimen/dimens_5_sp</item>
    </style>

    <style name="TextAppearanceDescription">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/dimens_16_sp</item>
        <item name="android:textColor">@color/event_title_text_colour</item>
    </style>

    <style name="TextAppearanceDescriptionDisabled">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/dimens_16_sp</item>
        <item name="android:textColor">@color/grey_text_color</item>
    </style>

    <style name="TextAppearanceSmallDescription">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/dimens_12_sp</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="Dialog.Light" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:colorControlActivated">@color/yellow</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="buttonBarButtonStyle">@style/Picker.Button</item>
    </style>

    <style name="DatePickerDialog.Light" parent="Dialog.Light">
        <item name="android:textColorSecondaryInverse">@color/text_gray_light</item>
        <item name="android:textColorPrimaryInverse">@color/black_color</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="materialCalendarStyle">@style/DatePicker</item>
    </style>

    <style name="TimePickerDialog.Light" parent="Dialog.Light">
        <item name="android:textColor">@color/text_unvisible</item>
        <item name="android:timePickerStyle">@style/TimePicker</item>
        <item name="android:labelTextSize">10sp</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="DatePicker" parent="@style/Widget.MaterialComponents.MaterialCalendar">
        <item name="daySelectedStyle">@style/DatePicker.Day</item>
        <item name="dayTodayStyle">@style/DatePicker.Day</item>
        <item name="dayStyle">@style/DatePicker.Day</item>
    </style>

    <style name= "DatePicker.Day" parent="Widget.MaterialComponents.MaterialCalendar.Day">
        <item name="itemFillColor">@color/white</item>
        <item name="itemStrokeColor">@color/yellow</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="TimePicker" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:headerBackground">@color/white</item>
        <item name="android:headerTimeTextAppearance">@style/TimePicker.TextAppearance</item>
        <item name="android:numbersTextColor">@color/black_color</item>
        <item name="android:numbersSelectorColor">@color/yellow</item>
        <item name="android:numbersBackgroundColor">@color/gray_60_dark</item>
        <item name="android:numbersInnerTextColor">@color/text_gray_light</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="TimePicker.TextAppearance" parent="@android:style/TextAppearance.Material">
        <item name="android:textSize">60sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">300</item>
        <item name="android:textColor">@color/time_picker_text_color_selector</item>
        <item name="android:textColorSecondary">@color/purple</item>
    </style>

    <style name="TimePicker.ImageButton" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="backgroundTint">
            @color/purple
        </item>
        <item name="background">@color/yellow</item>
        <item name="strokeColor">@color/black</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="strokeWidth">3dp</item>
    </style>

    <style name="Picker.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/cream_dark</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:textSize">14sp</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="TimePicker.Display.TextInputEditText." parent="Widget.MaterialComponents.TimePicker.Display.TextInputEditText">
        <item name="clockFaceBackgroundColor">@color/white</item>
        <item name="clockHandColor">@color/black</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

</resources>