<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ThemeOverlay.Widget.ProgressButton.Yellow" parent="">
        <item name="android:textAppearanceButton">@style/TextAppearance.ProgressButton.Yellow</item>
    </style>

    <style name="TextAppearance.Body.White" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.ProgressButton.Yellow" parent="@style/TextAppearance.Body.White">
        <item name="android:textColor">@color/button_text_color_selector</item>
    </style>

    <style name="TextAppearance.ProgressButton.Yellow.Disabled" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text_color_selector</item>
    </style>

    <style name="Widget.ProgressButton.Yellow" parent="">
        <item name="android:theme">@style/ThemeOverlay.Widget.ProgressButton.Yellow</item>
        <item name="android:background">@drawable/progress_button</item>
    </style>

    <style name="TextAppearanceLargeTitle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/dimens_34_sp</item>
        <item name="android:textColor">@color/event_title_text_colour</item>
    </style>

    <style name="TextAppearanceTitle" >
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/dimens_20_sp</item>
        <item name="android:textColor">@color/event_title_text_colour</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>

    <style name="TextAppearanceSmallTitle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/event_title_text_colour</item>
        <item name="android:textSize">@dimen/dimens_12_sp</item>
    </style>

    <style name="EventCardTitleTextAppearance">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/dimens_18_sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/event_title_text_colour</item>
        <item name="android:lineSpacingExtra">@dimen/dimens_5_sp</item>
    </style>

    <style name="TextAppearanceDescription">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/dimens_16_sp</item>
        <item name="android:textColor">@color/event_title_text_colour</item>
    </style>

    <style name="TextAppearanceDescriptionDisabled">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/dimens_16_sp</item>
        <item name="android:textColor">@color/grey_text_color</item>
    </style>

    <style name="TextAppearanceSmallDescription">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/dimens_12_sp</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <!-- DIALOG. LIGHT -->

    <style name="Dialog.Light" parent="android:Theme.Material.Light.Dialog">
        <item name="android:buttonBarButtonStyle">@style/Dialog.Button.Light</item>
        <item name="android:windowBackground">@drawable/background_rounded_corners</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Dialog.Button.Light" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/roboto</item>
        <item name="strokeColor">@color/cream_dark</item>
        <item name="strokeWidth">@dimen/dimens_1_dp</item>
        <item name="android:insetLeft">@dimen/dimens_8_dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_color</item>
    </style>

    <!-- DATEPICKER. LIGHT -->

    <style name="DatePickerDialog.Light" parent="Dialog.Light">
        <item name="android:textColorPrimaryInverse">@color/black_color</item> <!-- header text color -->
        <item name="android:textColorSecondary">@color/dark_gray</item> <!-- week text color -->
        <item name="android:textColorSecondaryInverse">@color/gray_light</item> <!-- year text color -->
        <item name="android:textColor">@color/black_color</item>
        <item name="android:datePickerStyle">@style/DatePickerStyle.Light</item>
        <item name="android:colorControlActivated">@color/yellow</item>
    </style>

    <style name="DatePickerStyle.Light" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">calendar</item>
        <item name="android:headerBackground">@color/white</item>
        <item name="android:headerYearTextAppearance">@style/TextAppearance.MaterialComponents.Headline3</item>
    </style>

    <!-- TIMEPICKER. LIGHT -->

    <style name="TimePickerDialog.Light" parent="Dialog.Light">
        <item name="android:timePickerStyle">@style/TimePicker.Light</item>
        <item name="android:windowTitleStyle">@style/TimePicker.Title.TextAppearance.Light</item>
    </style>

    <style name="TimePicker.Light" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">@color/white</item>
        <item name="android:timePickerMode">clock</item>
        <item name="android:headerTimeTextAppearance">@style/TimePicker.TextAppearance.Light</item>
        <item name="android:numbersTextColor">@color/black_color</item>
        <item name="android:numbersSelectorColor">@color/yellow</item>
        <item name="android:numbersBackgroundColor">@color/gray_60_dark</item>
        <item name="android:numbersInnerTextColor">@color/gray_light</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TimePicker.TextAppearance.Light" parent="@style/TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/time_picker_text_color_selector_light</item>
        <item name="fontWeight">300</item>
    </style>

    <style name="TimePicker.Title.TextAppearance.Light" parent="@style/TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/text_unvisible</item>
        <item name="android:textSize">@dimen/dimens_16_sp</item>
        <item name="background">@color/white</item>
        <item name="fontWeight">500</item>
    </style>

    <!-- DIALOG. DARK -->

    <style name="Dialog.Dark" parent="android:Theme.Material.Dialog">
        <item name="android:buttonBarButtonStyle">@style/Dialog.Button.Dark</item>
        <item name="android:windowBackground">@drawable/background_rounded_corners</item>
        <item name="android:background">@color/android_dark_background</item>
    </style>

    <style name="Dialog.Button.Dark" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/roboto</item>
        <item name="strokeColor">@color/segm_contr_dark</item>
        <item name="strokeWidth">@dimen/dimens_1_dp</item>
        <item name="android:insetLeft">@dimen/dimens_8_dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- DATEPICKER. DARK -->

    <style name="DatePickerDialog.Dark" parent="Dialog.Dark">
        <item name="android:textColorPrimaryInverse">@color/white</item> <!-- header text color -->
        <item name="android:textColorSecondary">@color/text_gray</item> <!-- week text color -->
        <item name="android:textColorSecondaryInverse">@color/text_gray</item> <!-- year text color -->
        <item name="android:textColor">@color/white</item>
        <item name="android:datePickerStyle">@style/DatePickerStyle.Dark</item>
        <item name="android:colorControlActivated">@color/yellow_for_selected_item</item>
    </style>

    <style name="DatePickerStyle.Dark" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">calendar</item>
        <item name="android:headerBackground">@color/android_dark_background</item>
        <item name="android:headerYearTextAppearance">@style/TextAppearance.MaterialComponents.Headline3</item>
        <item name="android:background">@color/android_dark_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- TIMEPICKER. DARK -->

    <style name="TimePickerDialog.Dark" parent="Dialog.Dark">
        <item name="android:timePickerStyle">@style/TimePicker.Dark</item>
        <item name="android:windowTitleStyle">@style/TimePicker.Title.TextAppearance.Dark</item>
    </style>

    <style name="TimePicker.Dark" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:headerBackground">@color/android_dark_background</item>
        <item name="android:timePickerMode">clock</item>
        <item name="android:headerTimeTextAppearance">@style/TimePicker.TextAppearance.Dark</item>
        <item name="android:numbersTextColor">@color/white</item>
        <item name="android:numbersSelectorColor">@color/yellow</item>
        <item name="android:numbersBackgroundColor">@color/android_dark_dropbox</item>
        <item name="android:numbersInnerTextColor">@color/text_gray</item>
        <item name="android:background">@color/android_dark_background</item>
    </style>

    <style name="TimePicker.TextAppearance.Dark" parent="@style/TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/time_picker_text_color_selector_dark</item>
        <item name="fontWeight">300</item>
    </style>

    <style name="TimePicker.Title.TextAppearance.Dark" parent="@style/TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/grey_text_color</item>
        <item name="android:textSize">@dimen/dimens_16_sp</item>
        <item name="background">@color/android_dark_background</item>
        <item name="fontWeight">500</item>
    </style>

    <!-- ALERT DIALOGS -->

    <style name="AlertDialog.Light" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/yellow</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialog.Light.Text</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="AlertDialog.Dark" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/yellow</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialog.Dark.Text</item>
        <item name="colorSurface">@color/android_dark_background</item>
    </style>

    <style name="AlertDialog.Light.Text">
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="AlertDialog.Dark.Text">
        <item name="android:textColor">@color/text_gray</item>
    </style>

</resources>
