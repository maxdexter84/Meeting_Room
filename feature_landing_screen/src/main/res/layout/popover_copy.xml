<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_popover_icon">

    <TextView
        android:id="@+id/text_copy_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:paddingLeft="@dimen/dimens_18_dp"
        android:paddingTop="@dimen/dimens_5_dp"
        android:paddingRight="@dimen/dimens_18_dp"
        android:paddingBottom="@dimen/dimens_15_dp"
        android:text="@string/copy"
        android:textColor="@color/white"
        android:textSize="@dimen/dimens_20_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

</androidx.constraintlayout.widget.ConstraintLayout>